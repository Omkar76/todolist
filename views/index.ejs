<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="grid justify-center gap-y-2.5">
        <%- include('header.ejs') -%>

        <form action="todos/" method="post">
            <input class="border-gray-dark border px-2 py-3 rounded-md" type="text" placeholder="What's next?"
                name="title">
            <input class="border-gray-dark border px-2 py-3 rounded-md" type="date" name="dueDate">
            <button class="px-2 py-3 text-white rounded-md bg-green-500" name="">Add</button>
        </form>
        
        <%- include('todos.ejs', {title : "Overdue", data: overdue}) -%>
        <%- include('todos.ejs', {title : "Due Today", data: dueToday}) -%>
        <%- include('todos.ejs', {title : "Due Later", data :dueLater}) -%>
        
        <%- include('footer.ejs') -%>
    </div>
</body>

</html>